<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ticket_card_view"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#f5f5f5"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MS DHONI"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:id="@+id/movie_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M2k Rohini"
                android:layout_below="@id/movie_name"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/hall_name"
                />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admits 3"
            android:layout_toRightOf="@id/hall_name"
                android:layout_below="@id/movie_name"
            android:layout_marginTop="8dp"
            android:id="@+id/ticket_number"
                android:layout_marginLeft="10dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 20 2016"
                android:layout_toRightOf="@id/ticket_number"
                android:layout_below="@id/movie_name"
                android:layout_marginTop="8dp"
                android:id="@+id/Date"
                android:layout_marginLeft="10dp"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
